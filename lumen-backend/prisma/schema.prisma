generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String     @default("")
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())

  analyses  Analysis[]
}

model Analysis {
  id        String   @id @default(uuid())
  url       String
  domain    String
  category  String
  score     Int
  summary   String
  text      String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
