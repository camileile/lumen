// lumen-backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Remova a linha da url daqui por enquanto
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  analyses  Analysis[]
  createdAt DateTime   @default(now())
}

model Analysis {
  id        String   @id @default(uuid())
  text      String
  result    String
  score     Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
