{
  "manifest_version": 3,
  "name": "Lumen",
  "version": "1.0",
  "description": "Sistema de consciÃªncia digital",

  "icons": {
    "128": "icon-verde.png"
  },

  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon-verde.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "lume-verde.gif",
        "lume-amarelo.gif",
        "lume-vermelho.gif"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}